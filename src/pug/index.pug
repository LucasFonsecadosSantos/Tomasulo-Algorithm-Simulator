  body(onload="")
    header
        div.line
            div.titleSection
                h2.white-title 
                    |Tomasulo Algorithm Simulator
                    p developed by: Lucas Santos, Marco Aurelio, Igor Nunes and Alan Luz.
    main
        div.line
            form()
                div.line
                    div.subForm
                        label instruction
                        select(type="text", placeholder="teste",onclick="loadRegisters()", id="instruction_name")
                            option(value="ADDD") ADDD
                            option(value="SUBD") SUBD
                            option(value="MULTD") MULTD
                            option(value="DIVD") DIVD
                            option(value="LD") LD
                            option(value="SD") SD
                            option(value="ADD") ADD
                            option(value="DADDUI") DADDUI
                            option(value="BEQ") BEQ
                            option(value="BNEZ") BNEZ
                        input#instruction_type(type="hidden")
                
                    div.subForm
                        label Destination Register
                        select(type="text", placeholder="teste", id="registers_list")
                    div.subForm
                        label RS Register / Offeset
                        select(type="text", placeholder="teste", id="registers_list02")
                    div.subForm
                        label RT Register / Label
                        select(type="text", placeholder="teste", id="registers_list03")
                div.line
                    label instructions added
                    textarea(id="instructions_list_viwer", placeholder="Instructions Entered to Proccess...", title="Instructions entered by the user", alt="ola debora", rows="10") 
                div.line.fix
                    button(onclick="exec()", type="button") start
                    button(id="confirmButton", type="button", onclick="confirmInst()") confirm instruction
                    button(onclick="clear_form()" ,type="button") clear the form
                    button(onclick="window.open('help.html', '_blank')", type="button") help-me
                
